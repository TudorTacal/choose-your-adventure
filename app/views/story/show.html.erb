<div id='story'>
  <h2>#<%= @story.title %></h2>
  <img src="<%= @story.image_url %>" alt="<%= @story.id %> picture" width="450" border="2">
  <p class="story-description"><%= @story.description %></p>
  <p><% @story.choices.each do |choice| %>
    <form method="get" action="/story/<%=choice.next_story_id%>">
      <button type="submit"><%= choice.description %></button>
    </form>
    <% end %>
  </p>
</div>

<div id='test'>
  Hello
</div>
<div id='arrived'>
  <%= link_to "I've arrived" %>
</div>

<script>
  $(document).ready(function() {
    $('#test').css('color', 'red');
    $('#story').hide();
    $('#arrived').on('click', function(event){
      event.preventDefault();
      $('#story').show();
    })
  })

</script>

